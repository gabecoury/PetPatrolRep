
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#595959">


    <!--
    CIS 4700: Mobile Commerce Development
    Spring 2016
    Due date: 04/03/16
    Date completed: 04/03/16
    *************************************
    * Program Explanation
    * This is the xml code for the semester class project. All the code below is necessary for a well function app.
    * The user will be asked to make a selection between three buttons, report a pet, find a pet, or adopt a pet.  There is 
    * also an imageview with the logo.
    *************************************
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/imgViewLogo"
            android:text="@string/imgViewLogo"
            android:src="@drawable/petpatrollogo"
            android:contentDescription="@string/imageViewLogo"
            android:layout_gravity="left"
            android:padding="10dp"
            android:paddingBottom="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_gravity="right"
        android:gravity="left">


        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="@string/report_button"
            android:id="@+id/buttonReport"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:maxWidth="400dp"
            android:background="#56b1fb"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="@string/find_button"
            android:id="@+id/buttonFind"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:maxWidth="400dp"
            android:background="#56b1fb"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="@string/adopt_button"
            android:id="@+id/buttonAdopt"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="right"
            android:gravity="center|center_horizontal"
            android:maxWidth="400dp"
            android:background="#56b1fb"/>

    </LinearLayout>
</RelativeLayout>
